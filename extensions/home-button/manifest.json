{
  "description": "implements the home button",
  "manifest_version": 2,
  "name": "home-button",
  "version": "1.0",

  "applications": {
    "gecko": {
      "id": "home-button@mozilla.org"
    }
  },

  "permissions": [
    "homes",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_icon": "home.png",
    "default_title": "home this page"
  }
}
