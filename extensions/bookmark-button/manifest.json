{
  "description": "implements the bookmark button",
  "manifest_version": 2,
  "name": "bookmark-button",
  "version": "1.0",

  "applications": {
    "gecko": {
      "id": "bookmark-button@mozilla.org"
    }
  },

  "permissions": [
    "bookmarks",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_icon": "unstarred.png",
    "default_title": "Bookmark this page"
  }
}
